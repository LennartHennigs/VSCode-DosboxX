    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile/Run in DosBox-X",
            "type": "shell",
            "command": "dosbox-x",
            "args": [
                "-quiet",
                "-log-con",
                "-fastlaunch",
                "-c",
                "\"CC.BTM ${file}\""
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}   
